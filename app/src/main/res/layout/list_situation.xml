<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <RelativeLayout
        android:id="@+id/coverLayout"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_cover_video_circle">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="13.9dp"
            android:layout_height="16dp"
            android:layout_marginLeft="64dp"
            android:layout_centerVertical="true"
            android:background="@drawable/background_cover_video_triangle">
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/coverLayout"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="51dp"
        android:textColor="#4e7b9f"
        android:textSize="15dp"
        android:text="Some text"/>

</RelativeLayout>